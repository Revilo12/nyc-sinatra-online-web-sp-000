    <input type="checkbox" id="<%= title_id %>" value="title_<%= title.id %>" name="figure[title_ids][]"><%= title.name %></input><br>
  <% end %>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.id %>" value="landmark_<%= landmark.id %>" name="figure[landmark_ids][]"><%= landmark.name %></input><br>
  <% end %>
  <input type="text" name="title[name]" id="title_name">Alternative Title Name</label>
  <input type="text" name="landmark[name]" id="landmark_name">Alternative Landmerk Name</label>
  <input type="submit" id="Creat New Figure" value="Create New Figure">
</form>

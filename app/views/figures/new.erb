<form action='/figures' method="POST">
  <input type="text" name="figure[name]" id="figure_name">Figure Name</label>
  <% @titles.each do |title| %>
    <input type="checkbox" id="<%= title.id %>" value="<%= title.id %>" name="figure[title_ids][]"><%= title.name %></input><br>
  <% end %>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="<%= landmark.id %>" value="<%= landmark.id %>" name="figure[landmark_ids][]"><%= landmark.name %></input><br>
  <% end %>
  <input type="submit" id="Creat New Figure" value="Create New Figure">
</form>
